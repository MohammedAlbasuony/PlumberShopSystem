@using B_B.BLL.ViewModels
@model IEnumerable<SupplierWithReceiptsVM>

<div class="page-content active">
    <div class="page-header">
        <h1 class="page-title">إدارة الموردين</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> مورد جديد
        </a>
    </div>

    <div class="content-section">
        <div class="table-controls">
            <div class="search-bar">
                <i class="fas fa-search"></i>
                <input type="text" id="searchInput" class="search-input" placeholder="ابحث عن موردين..." />
            </div>
        </div>

        <div class="table-container">
            <table class="table" id="suppliersTable">
                <thead>
                    <tr>
                        <th>الاسم</th>
                        <th>الفواتير</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    @foreach (var s in Model)
                    {
                        // Calculate total remaining amount for all receipts of this supplier
                        var totalRemaining = s.Receipts.Sum(r => r.RemainingAmount);
                        var totalRemainingClass = totalRemaining > 0 ? "text-danger" :
                        (totalRemaining < 0 ? "text-warning" : "text-success");

                        <tr id="row-@s.SupplierId" data-suppliername="@s.Name.ToLower()">
                            <td class="supplier-name">@s.Name</td>
                            <td>
                                @if (s.Receipts.Any())
                                {
                                    <div class="supplier-total-section mb-3 p-3" style="background-color: #f8f9fa; border-radius: 8px;">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>إجمالي المتبقي للمورد:</strong>
                                                <span class="@totalRemainingClass" style="font-size: 1.2rem; margin-right: 10px;">
                                                    @Math.Abs(totalRemaining).ToString("0.00")
                                                </span>
                                                @if (totalRemaining > 0)
                                                {
                                                    <span class="status-badge bg-danger-light">
                                                        <i class="fas fa-arrow-up"></i> نحن مدينون للمورد
                                                    </span>
                                                }
                                                else if (totalRemaining < 0)
                                                {
                                                    <span class="status-badge bg-warning-light">
                                                        <i class="fas fa-arrow-down"></i> المورد مدين لنا
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="status-badge bg-success-light">
                                                        <i class="fas fa-check"></i> تم التسوية
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                    </div>

                                    <div class="table-container">
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>التاريخ</th>
                                                    <th>الإجمالي</th>
                                                    <th>الإجمالي بعد المرتجعات</th>
                                                    <th>المدفوع</th>
                                                    <th>المتبقي</th>
                                                    <th>الحالة</th>
                                                    <th>الإجراءات</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var r in s.Receipts)
                                                {
                                                    var isOwedToSupplier = r.RemainingAmount > 0;
                                                    var isSupplierOwes = r.RemainingAmount < 0;
                                                    var isSettled = r.RemainingAmount == 0;

                                                    var remainingAmountClass = isOwedToSupplier ? "text-danger" :
                                                    (isSupplierOwes ? "text-warning" : "text-success");
                                                    var statusText = isOwedToSupplier ? "نحن مدينون للمورد" :
                                                    (isSupplierOwes ? "المورد مدين لنا" : "تم التسوية");
                                                    var statusIcon = isOwedToSupplier ? "fa-arrow-up" :
                                                    (isSupplierOwes ? "fa-arrow-down" : "fa-check");
                                                    var statusBg = isOwedToSupplier ? "bg-danger-light" :
                                                    (isSupplierOwes ? "bg-warning-light" : "bg-success-light");

                                                    <tr>
                                                        <td>@r.Date.ToShortDateString()</td>
                                                        <td>@r.TotalAmount.ToString("0.00")</td>
                                                        <td>@r.AdjustedTotal.ToString("0.00")</td>
                                                        <td>
                                                            @if (r.PaidAmount != 0)
                                                            {
                                                                <span class="@(r.PaidAmount > 0 ? "text-success" : "text-danger")">
                                                                    @r.PaidAmount.ToString("0.00")
                                                                </span>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted">0.00</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            <span class="@remainingAmountClass">
                                                                @Math.Abs(r.RemainingAmount).ToString("0.00")
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <span class="status-badge @statusBg">
                                                                <i class="fas @statusIcon"></i>
                                                                @statusText
                                                            </span>
                                                        </td>
                                                        <td class="action-cell">
                                                            <!-- Always show payment form -->
                                                            <form asp-action="AddPayment" method="post" class="d-flex align-items-center">
                                                                <input type="hidden" name="receiptId" value="@r.ReceiptId" />
                                                                <input type="number" step="0.01" name="amount"
                                                                       class="form-input" style="width:100px;"
                                                                       placeholder="المبلغ (موجب/سالب)" />
                                                                <button type="submit" class="btn btn-primary btn-sm ml-2">
                                                                    <i class="fas fa-money-bill"></i> دفع / استرداد
                                                                </button>
                                                            </form>

                                                            <a asp-controller="Receipt" asp-action="Review" asp-route-id="@r.ReceiptId"
                                                               class="btn btn-info btn-sm ml-2">
                                                                <i class="fas fa-file-alt"></i> تفاصيل
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">لا توجد فواتير</span>
                                }
                            </td>
                            <td class="action-cell">
                                <a asp-action="Details" asp-route-id="@s.SupplierId" class="action-btn edit-btn" title="تفاصيل المورد">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <a href="javascript:void(0)" class="action-btn delete-btn" data-id="@s.SupplierId" title="حذف">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>

        <nav>
            <ul class="pagination" id="pagination"></ul>
        </nav>
        <div class="pagination-info" id="paginationInfo"></div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            const allRows = Array.from(document.querySelectorAll('#tableBody > tr'));
            const pageSize = 20;
            let currentPage = 1;
            const maxVisiblePages = 5;

            setupPagination();

            // Search - suppliers
            $("#searchInput").on("input", function () {
                currentPage = 1;
                setupPagination();
            });

            // Success message
            var successMessage = '@TempData["Success"]';
            if (successMessage) {
                Swal.fire({
                    icon: "success",
                    title: "تم بنجاح",
                    text: successMessage,
                    timer: 2000,
                    showConfirmButton: false
                });
            }

            // Delete with SweetAlert
            $(".delete-btn").click(function () {
                var id = $(this).data("id");
                Swal.fire({
                    title: "هل أنت متأكد؟",
                    text: "سيتم حذف هذا المورد بشكل دائم.",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "نعم، احذفه!",
                    cancelButtonText: "إلغاء"
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.post("@Url.Action("Delete", "Supplier")", { id: id })
                            .done(function (data) {
                                if (data.success) {
                                    $("#row-" + id).fadeOut(300, function () {
                                        $(this).remove();
                                        setupPagination();
                                    });
                                    Swal.fire("تم الحذف!", data.message, "success");
                                } else {
                                    Swal.fire("خطأ!", data.message, "error");
                                }
                            })
                            .fail(function () {
                                Swal.fire("خطأ!", "حدث خطأ أثناء الاتصال بالخادم", "error");
                            });
                    }
                });
            });

            // Payment for individual receipt (positive or negative)
            $("form[action*='AddPayment']").on("submit", function (e) {
                e.preventDefault();
                var form = $(this);
                var amountInput = form.find("input[name='amount']");
                var amount = parseFloat(amountInput.val());

                if (isNaN(amount) || amount === 0) {
                    Swal.fire("خطأ!", "يرجى إدخال مبلغ صحيح (موجب أو سالب)", "error");
                    return false;
                }

                $.post(form.attr("action"), form.serialize())
                    .done(function (data) {
                        if (data.success) {
                            Swal.fire({
                                icon: "success",
                                title: "تمت العملية",
                                text: data.message,
                                timer: 2000,
                                showConfirmButton: false
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire("خطأ!", data.message, "error");
                        }
                    })
                    .fail(function () {
                        Swal.fire("خطأ!", "حدث خطأ أثناء الاتصال بالخادم", "error");
                    });
            });

           

            // Pagination setup
            function setupPagination() {
                const searchText = $("#searchInput").val().toLowerCase().trim();

                const filteredRows = allRows.filter(row => {
                    if (searchText === "") return true;

                    const supplierName = row.querySelector('.supplier-name').textContent.toLowerCase();
                    const dataSupplierName = row.getAttribute("data-suppliername");

                    return supplierName.includes(searchText) ||
                           dataSupplierName.includes(searchText);
                });

                allRows.forEach(r => r.style.display = "none");

                const totalItems = filteredRows.length;
                const pageCount = Math.ceil(totalItems / pageSize);
                const pagination = $("#pagination");
                const info = $("#paginationInfo");

                pagination.empty();

                if (totalItems === 0) {
                    info.text("لا توجد نتائج تطابق البحث");
                    return;
                }

                const startItem = ((currentPage - 1) * pageSize) + 1;
                const endItem = Math.min(currentPage * pageSize, totalItems);

                info.text(`عرض ${startItem}-${endItem} من ${totalItems} مورد`);

                if (pageCount > 1) {
                    const prevLi = $("<li>", {
                        class: `page-item ${currentPage === 1 ? 'disabled' : ''}`
                    }).html('<a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a>')
                        .click(function (e) {
                            e.preventDefault();
                            if (currentPage > 1) {
                                currentPage--;
                                setupPagination();
                            }
                        }).appendTo(pagination);

                    let startPage = Math.max(1, currentPage - Math.floor(maxVisiblePages / 2));
                    let endPage = Math.min(pageCount, startPage + maxVisiblePages - 1);

                    if (endPage - startPage < maxVisiblePages - 1) {
                        startPage = Math.max(1, endPage - maxVisiblePages + 1);
                    }

                    for (let i = startPage; i <= endPage; i++) {
                        $("<li>", { class: `page-item ${i === currentPage ? "active" : ""}` })
                            .html(`<a class="page-link" href="#" data-page="${i}">${i}</a>`)
                            .click(function (e) {
                                e.preventDefault();
                                currentPage = i;
                                setupPagination();
                            })
                            .appendTo(pagination);
                    }

                    const nextLi = $("<li>", {
                        class: `page-item ${currentPage === pageCount ? 'disabled' : ''}`
                    }).html('<a class="page-link" href="#"><i class="fas fa-chevron-left"></i></a>')
                        .click(function (e) {
                            e.preventDefault();
                            if (currentPage < pageCount) {
                                currentPage++;
                                setupPagination();
                            }
                        }).appendTo(pagination);
                }

                showPage(currentPage, filteredRows);
            }

            function showPage(page, filteredRows) {
                const start = (page - 1) * pageSize;
                const end = start + pageSize;

                filteredRows.forEach((row, index) => {
                    row.style.display = (index >= start && index < end) ? "" : "none";
                });
            }
        });
    </script>
}

<style>
   
