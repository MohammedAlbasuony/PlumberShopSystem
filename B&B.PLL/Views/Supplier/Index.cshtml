    }

    .pagination-info {
        text-align: center;
        margin-top: 0.5rem;
        color: var(--gray-600);
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .supplier-total-section .d-flex {
            flex-direction: column;
            gap: 1rem;
        }

        .action-cell {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }

        .search-bar {
            max-width: 100%;
        }

        .pagination {
            flex-wrap: wrap;
        }
    }
</style>