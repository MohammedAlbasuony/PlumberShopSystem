@model B_B.DAL.Entity.Product

<div class="page-content active">
    <div class="page-header">
        <h1 class="page-title">إضافة منتج جديد</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> رجوع للمخزون
        </a>
    </div>

    <div class="content-section">
        <form asp-action="Create" method="post">
            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="Name" class="form-label">اسم المنتج</label>
                    <input asp-for="Name" class="form-input" placeholder="أدخل اسم المنتج" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="InitialStock" class="form-label">المخزون الابتدائي</label>
                    <input asp-for="InitialStock" class="form-input" type="number" min="0" value="0" />
                    <span asp-validation-for="InitialStock" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Cost" class="form-label">سعر التكلفة</label>
                    <input asp-for="Cost" class="form-input" type="number" step="0.01" min="0" placeholder="0.00" />
                    <span asp-validation-for="Cost" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SellingPrice" class="form-label">سعر البيع</label>
                    <input asp-for="SellingPrice" class="form-input" type="number" step="0.01" min="0" placeholder="0.00" />
                    <span asp-validation-for="SellingPrice" class="text-danger"></span>
                </div>

               
            </div>

            <div class="action-buttons mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> حفظ المنتج
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    إلغاء
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}