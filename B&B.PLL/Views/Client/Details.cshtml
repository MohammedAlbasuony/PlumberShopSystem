@using B_B.DAL.Entity
@model Client

<h2>Client Details</h2>

<p><strong>Name:</strong> @Model.Name</p>
<p><strong>Phone:</strong> @Model.Phone</p>


<h3>Receipts</h3>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Product</th>
            <th>Qty</th>
            <th>Unit Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Receipts ?? Enumerable.Empty<Receipt>())
        {
            foreach (var d in r.ReceiptDetails)
            {
                <tr>
                    <td>@r.Date.ToShortDateString()</td>
                    <td>@d.Product?.Name</td>
                    <td>@d.Quantity</td>
                    <td>@d.UnitPrice</td>
                </tr>
            }
        }
    </tbody>
</table>
